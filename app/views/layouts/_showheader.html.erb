<header>
    <div class="dropdown">
        <button class="dropbtn">Links</button>
        <div class="dropdown-content">
            <a href="http://judah.cedarville.edu/~jrussel/cs3220.html">Homepage</a>
            <a href="http://judah.cedarville.edu/peopleschoice/index.php">People's Choice Awards</a>
        </div>
    </div>
    <div class="column">
        <p>
            <span id="plan-name"></span><br/>
            <span id="plan-term"></span>
        </p>
        <p class="heading">
            Student: <%= @plan.user.login %><br/>
            Catalog: <%= @plan.startyear %>
        </p>
    </div>
    <div class="column">
        <p>
            <span id="plan-majors"></span><br/>
            <span id="plan-IDname"></span>
        </p>
        <p class="heading">
            <!--TODO: Support multiple majors and minors -->
            Major: <%= @plan.user.major %><br/>
            Plan: <%= @plan.name %>
        </p>
    </div>
    <h1 id="title">
        <%= image_tag("Ape.png", width: "112px", height: "46px")%>
    </h1>
</header>